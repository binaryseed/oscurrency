<li class="bid">
  <a name="bid_<%= bid.id %>"></a>
  <div class="profile-image">
    <%= image_link bid.person, :image => :thumbnail %>

	<% if bid.status_id == Bid::SATISFIED %>
	    <%= image_tag "icons/check.gif", :class => "icon", :alt => "Bid" %>
	<% else %>
	    <%= image_tag "icons/reply.gif", :class => "icon", :alt => "Bid" %>
	<% end %>

  </div>
    <% if current_person?(bid.req.person) && bid.status_id < Bid::ACCEPTED # && !bid.req.has_accepted_bid? 
	-%>
      <% form_for :bid, :url => req_bid_path(bid.req, bid), :html => {:method => :put} do |f| %>
        <%= f.hidden_field :status_id, :value => Bid::ACCEPTED %>
        <%= f.submit "Accept" %>
      <% end -%>
    <% end -%>

    <%= render :partial => "shared/accepted_bid", :object => bid %>

  <p>
  Marble bid: <%= h bid.estimated_hours %> <span class="meta">Expires <%= relative_time_ago_in_words(bid.expiration_date) %></span>
  </p>
  <div class="col_content">
  <p>
  	<%= h bid.description %>
  </p>
  <p class="meta">
	
    <% if bid.approved? %>
		<%= bid_approved_message(bid) %><br>
	<% else -%>
	    <% if bid.completed? %><%= bid_completed_message(bid) %><br><% end -%>
	    <% if bid.commitment? %><%= bid_commitment_message(bid) %><br><% end -%>
	    <% if bid.accepted? %><%= bid_accepted_message(bid) %><br><% end -%>
	<% end -%>
	
	
   Submitted by <%= person_link bid.person %>
    <%= time_ago_in_words(bid.created_at) %> ago
    <% if admin? || current_person?(bid.person) -%>
    | <%= link_to "Delete", req_bid_path(bid.req,bid), :confirm => 'Are you sure?', :method => :delete %>
    <% end -%>
    <br>
    <% if false && current_person?(bid.req.person) && !current_person.address.nil? && !bid.person.address.nil? && !current_person?(bid.person) -%>
      <%= number_with_precision(bid.person.address.distance_to(current_person.address)).to_s %> miles away
    <% end -%>
  </p>
  </div>
</li>
