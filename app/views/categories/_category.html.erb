<li>
  <a class="categoryMenuItem" href="#<%= category_counter + 1  %>" title="" name="<%= category_counter + 1 %>"><%= category.name %> <span class='meta'><%= "(#{category.num_requests})" unless category.num_requests==0 %></span></a> 
  <div>
    <ul>
    <% if category.children.empty? -%>
      <li><%= link_to 'General', category %> <span class="meta"><%= "(#{category.num_requests})" unless category.num_requests==0 %></span></li>
      <br>
    <% else -%>
      <li><%= link_to 'General', category %> <span class="meta"><%= "(#{category.num_requests})" unless category.num_requests==0 %></span></li>
      <%= render :partial => 'subcategory', :collection => category.children %>
    <% end -%>
    </ul>
  </div>
</li>
