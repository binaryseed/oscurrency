<li class="vcard person">
  <div class="profile-image">
    <%= image_link person, :class => "photo", :image => :thumbnail %>
  </div>

  <div class="col_content">
	  <p><%= person_link person, :class => "url fn" %></p>
	  <% if defined? short %>
	      <%= display shorten(person.description,100), :class => "note" %>
		<% else %>
	  	  <%= display person.description, :class => "note" %>
		<% end %>
  </div>
</li>
