<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
<%= javascript_include_tag 'hoverIntent' %>


<script type="text/javascript">

jQuery(function(){
      
  
  jQuery("#areas .area").hoverIntent(
    function(){
      showid = "step"+jQuery(this).attr("id")
      jQuery("#switcher div").hide()
      jQuery("#switcher ."+showid).fadeIn()
    },
    function(){
      jQuery("#switcher div").not(".login").hide()
      jQuery("#switcher .login").fadeIn(3000)
    }
  )
  
})
 
</script>











