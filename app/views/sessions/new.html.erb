<%- column_div :type => :secondary do -%>

 


<h2>login</h2>

<% form_tag session_path do -%>

  <div class="form_row">
    <label for="email">Email address</label>
    <%= text_field_tag 'email', params[:email],
                                :maxlength => Person::MAX_EMAIL  %>
  </div>

  <div class="form_row">
    <label for="password">Password</label>
    <%= password_field_tag 'password', params[:password],
                                       :maxlength => Person::MAX_PASSWORD %>
  </div>


  <div class="form_row">
    <label style="font-weight:normal" for="remember_me" class="checkbox">Remember me:</label>
    <%= check_box_tag 'remember_me', '1', true, :class => "checkbox" %>
  </div>

  <div class="form_row">
    <%= submit_tag 'login', :class => "button" %>
  </div>


<% end -%>





<% end %>







